{
	"name": "next-boilerplate",
	"version": "0.1.0",
	"description": "Minimalistic boilerplate to quick-start Next.js development in TypeScript, optimized for blazing-fast performance with Bun & Turbopack ðŸš€",
	"author": "Raja Rakotonirina <raja.rakoto7@gmail.com>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/RajaRakoto/next-boilerplate.git"
	},
	"homepage": "https://github.com/RajaRakoto/next-boilerplate#readme",
	"bugs": "https://github.com/RajaRakoto/next-boilerplate/issues",
	"files": [
		".next"
	],
	"keywords": [
		"typescript",
		"nextjs",
		"next",
		"bunjs",
		"bun",
		"turbopack",
		"minimalist",
		"boilerplate",
		"template",
		"starter"
	],
	"engines": {
		"node": ">=20.10.0",
		"next": ">=14.1.3"
	},
	"scripts": {
		"start": "next start",
		"clean": "rimraf .next playwright-report",
		"nvm": "nvm use",
		"dev": "next dev --turbo",
		"build": "bun run clean && next build",
		"postbuild": "next-sitemap --config next-sitemap.config.js",
		"test:unit": "bun test ./tests/*.test.ts",
		"test:unit:watch": "bun test --watch ./tests/*.test.ts",
		"test:e2e": "rimraf playwright-report && playwright test ./e2e/*.spec.ts",
		"typecheck": "tsc --noEmit --incremental false",
		"eslint": "eslint --config .eslintrc --report-unused-disable-directives --max-warnings 0 .",
		"prettier": "prettier --config .prettierrc --write .",
		"backup": "grunt backup",
		"pkg-check": "depcheck",
		"pkg-upgrade": "ncu --interactive --format group --packageManager bun",
		"versioning": "ungit",
		"npm-version:major": "npm version major",
		"npm-version:minor": "npm version minor",
		"npm-version:patch": "npm version patch",
		"script:sass-charset": "cd scripts && bun sass-charset.js"
	},
	"dependencies": {
		"@reduxjs/toolkit": "^2.2.1",
		"next": "14.1.3",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-redux": "^9.1.0",
		"zustand": "^4.5.2"
	},
	"devDependencies": {
		"@playwright/test": "^1.42.1",
		"@total-typescript/ts-reset": "^0.5.1",
		"@types/bun": "^1.0.8",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.11.28",
		"@types/react": "^18.2.66",
		"@types/react-dom": "^18.2.22",
		"@typescript-eslint/eslint-plugin": "^7.2.0",
		"@typescript-eslint/parser": "^7.2.0",
		"autoprefixer": "^10.4.18",
		"depcheck": "^1.4.7",
		"eslint": "^8.57.0",
		"eslint-config-next": "^14.1.3",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-jest": "^27.9.0",
		"grunt-cli": "^1.4.3",
		"grunt-contrib-compress": "^2.0.0",
		"jest": "^29.7.0",
		"load-grunt-tasks": "^5.1.0",
		"next-sitemap": "^4.2.3",
		"npm-check-updates": "^16.14.17",
		"playwright": "^1.42.1",
		"postcss": "^8.4.36",
		"prettier": "^3.2.5",
		"rimraf": "^5.0.5",
		"sass": "^1.72.0",
		"tailwindcss": "^3.4.1",
		"ts-jest": "^29.1.2",
		"typescript": "^5.4.2",
		"ungit": "^1.5.25"
	}
}
